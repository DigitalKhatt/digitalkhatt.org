{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "module": "esnext",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "allowJs": true,
    "paths": {
      //"*": [ "custom_typings/*", "*" ]
      "pdfjs-web/*": [ "custom_typings/pdfjs-web/*" ],
      "pdfjs-worker": [ "custom_typings/pdfjs-worker" ],
      "pdfjs-lib": [ "custom_typings/pdfjs-lib" ]
    }
  }
}
